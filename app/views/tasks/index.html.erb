<h1>タスク一覧</h1>
<div class=index_header>
<%= link_to '新規投稿', new_task_path %>
<%= link_to "終了期限ソート",tasks_path(sort_expired: "true") %>
<%= link_to "優先順位ソート",tasks_path(sort_priority: "true") %>
</div>
<div class="search">
  <h3>検索</h3>
  <%= form_with model: @task, method: :get, local: true do |form| %>
    <%= form.label :'タスク名' %>
    <%= form.text_field :search_title %>
    <%= form.label :'ステータス' %>
    <%= form.select :search_status, Task.statuses.keys %>
    <%= form.submit '検索', name: 'search' %>

    <%= link_to '検索終了', tasks_path %>
  <% end %>
</div>
<div class="index_main">
  <table>
    <tr>
      <th>タスク名</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td class="task_row"><%= task.content %></td>
        <td class="task_row"><%= task.expired_at %></td>
        <td class="task_row"><%= task.status %></td>
        <td class="task_row"><%= task.priority %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="page">
  <%= paginate @tasks %>
</div>
