<h1>タスク詳細</h1>
<p>
  <strong>タスク名：</strong>
  <%= @task.title %>
</p>
<p>
  <strong>内容：</strong>
  <%= @task.content %>
</p>
<p>
  <strong>終了期限：</strong>
  <%= @task.expired_at %>
</p>
<p>
  <strong>ステータス：</strong>
  <%= @task.status %>
</p>
<p>
  <strong>作成者：</strong>
  <%= @task.user.name %>
</p>
<div class="user_only_link">
  <% if @task.user == current_user %>
    <%= link_to '編集', edit_task_path(@task.id) %>
    <%= link_to '削除', task_path(@task.id), method: :delete, data: { confirm: '本当に削除しますか?' } %>
  <% end %>
</div>
<div class="show_back">
<%= link_to 'Back', tasks_path %>
</div>
