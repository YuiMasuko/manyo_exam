<%= form_with(model: @task, local: true) do |form| %>

<%= render 'layouts/error_messages', model: form.object %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>
<div class="field">
  <%= form.label :content %>
  <%= form.text_area :content %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
